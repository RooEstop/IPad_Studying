class Circle {
public:
    int radius;
    double getArea();
};

double Circle::getArea(){
    return 3.14*radius*radius;
}

int main(){
    Circle donut;
    donut.radius = 1; // set 'radius' of 'donut' class
    double area = donut.getArea();
    cout << "Area of donut is " << area << "." << endl;

    Circle pizza;
    pizza.radius = 30;
    area = pizza.getArea();
    cout << "Area of pizza is" << area << "." << endl;
}

